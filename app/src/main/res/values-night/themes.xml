<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark1</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.No_Status_bar" parent="@style/AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.customSplash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
    </style>
</resources>
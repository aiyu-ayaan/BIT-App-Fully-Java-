<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_about_is_scene2"
    tools:context=".Sliding_Navigation.About_US.AboutUs">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/showData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_about1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#10000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/bitLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="@id/mainContainer"
        app:layout_constraintStart_toStartOf="@id/mainContainer"
        app:layout_constraintTop_toTopOf="@id/mainContainer"
        app:srcCompat="@drawable/ic_ayaan_beta" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Version 3.2.4"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/insta"
        app:layout_constraintEnd_toStartOf="@+id/insta"
        app:layout_constraintStart_toEndOf="@+id/bitLogo"
        app:layout_constraintTop_toTopOf="@+id/insta" />

    <ImageView
        android:id="@+id/insta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/mainContainer"
        app:layout_constraintEnd_toEndOf="@id/mainContainer"
        app:layout_constraintTop_toTopOf="@id/mainContainer"
        app:srcCompat="@drawable/instagram"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/title_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Developed By"
        android:textColor="#ff000000"
        android:textSize="30.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainContainer" />


    <TextView
        android:id="@+id/title_about2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Ayaan &#38; Aasif"
        android:textColor="#ff000000"
        android:textSize="20.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_about" />

    <TextView
        android:id="@+id/title_about1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="What's New"
        android:textColor="#ff000000"
        android:textSize="30.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_about2" />


    <androidx.core.widget.NestedScrollView
        android:id="@id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:animateLayoutChanges="true"
        android:clickable="false"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="8.0dip"
            android:visibility="visible">

            <TextView
                android:id="@+id/devNAme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:text="Developed By"
                android:textAllCaps="true"
                android:textColor="#ff000000"
                android:textSize="23.0dip"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/row1"
                android:layout_width="fill_parent"
                android:layout_height="180.0dip"
                android:layout_below="@id/devNAme"
                android:layout_marginTop="0.0dip"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:padding="5.0dip">

                    <LinearLayout
                        android:id="@+id/Aasif"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/circle_pro"
                        android:orientation="vertical"
                        android:padding="10.0dip">

                        <ImageView
                            android:id="@+id/aa"
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/aasif" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cofounder"
                                android:layout_width="75.0dip"
                                android:layout_height="25.0dip"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/tag_founder"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Aasif"
                                android:textColor="#ff000000"
                                android:textSize="20.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:padding="5.0dip">

                    <LinearLayout
                        android:id="@+id/Ayaan"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/circle_pro"
                        android:orientation="vertical"
                        android:padding="10.0dip">

                        <ImageView
                            android:id="@+id/a"
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/aiyu" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cofounder1"
                                android:layout_width="75.0dip"
                                android:layout_height="25.0dip"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/tag_founder"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="top"
                                android:text="Ayaan"
                                android:textColor="#ff000000"
                                android:textSize="20.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="170.0dip"
                android:layout_below="@id/row1"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:padding="5.0dip">

                    <LinearLayout
                        android:id="@+id/Nilay"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/circle_pro"
                        android:orientation="vertical"
                        android:padding="10.0dip">

                        <ImageView
                            android:id="@+id/n"
                            android:layout_width="100.0dip"
                            android:layout_height="80.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/nilay" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/nilay_tag"
                                android:layout_width="75.0dip"
                                android:layout_height="25.0dip"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/event_head"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Nilay"
                                android:textColor="#ff000000"
                                android:textSize="20.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:padding="5.0dip">

                    <LinearLayout
                        android:id="@+id/Roushan"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/circle_pro"
                        android:orientation="vertical"
                        android:padding="10.0dip">

                        <ImageView
                            android:id="@+id/r"
                            android:layout_width="100.0dip"
                            android:layout_height="80.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/roushan" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/roushan_tag"
                                android:layout_width="75.0dip"
                                android:layout_height="25.0dip"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/notice_head"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Roushan"
                                android:textColor="#ff000000"
                                android:textSize="20.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>